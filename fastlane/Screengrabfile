$LOAD_PATH << '.'

# Dir.chdir('./../')

@fastlane_directory = File.expand_path('./fastlane/helpers')
unless File.directory?(@fastlane_directory)
  @fastlane_directory = File.expand_path('./helpers')
end
require "#{@fastlane_directory}/metadata_helper.rb"
helper = Metadata_helper.new

package_name = helper.get_property('app_identifier')
cordova_folder = File.expand_path("./cordova")
fastlane_folder = File.expand_path("./fastlane")

p cordova_folder

app_package_name package_name

use_tests_in_classes ["#{package_name}.MainActivityTest"]

app_apk_path "#{cordova_folder}/platforms/android/build/outputs/apk/android-debug.apk"
tests_apk_path "#{cordova_folder}/platforms/android/build/outputs/apk/android-debug-androidTest.apk"


locales helper.get_languages

# clear all previously generated screenshots in your local output directory before creating new ones
clear_previous_screenshots true

output_directory "#{fastlane_folder}/metadata/android"

skip_open_summary true
clear_previous_screenshots true
